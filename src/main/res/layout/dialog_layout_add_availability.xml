<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/dialog_content_vmargin"
              android:paddingRight="@dimen/dialog_content_vmargin"
              android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_day"
            android:text="Hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="@dimen/label_to_input_vmargin"
            android:layout_marginLeft="@dimen/label_left_margin"
            android:textColor="@color/label_text_color"/>

        <Spinner
            android:id="@+id/spinner_school_level"
            android:layout_below="@id/label_day"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:prompt="@string/select_school_level"
            android:entries="@array/day_arrays"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_start_time"
            android:text="Dari Jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/label_left_margin"
            android:textColor="@color/label_text_color"/>

        <TimePicker
            android:id="@+id/timepicker_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_start_time"
            android:layout_centerHorizontal="true"
            android:timePickerMode="spinner"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_end_time"
            android:text="Hingga Jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginBottom="@dimen/label_to_input_vmargin"
            android:layout_marginLeft="@dimen/label_left_margin"
            android:textColor="@color/label_text_color"/>

        <TimePicker
            android:id="@+id/timepicker_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_end_time"
            android:layout_centerHorizontal="true"
            android:timePickerMode="spinner"/>
    </RelativeLayout>

</LinearLayout>