<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/window_to_content_padding">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sedang Tersedia Sekarang?"
            android:layout_marginBottom="4dp"/>
        <RadioGroup
            android:id="@+id/rgrup_availability_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:checkedButton="@id/radio_opt_available">
            <RadioButton
                android:id="@id/radio_opt_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ya"/>
            <RadioButton
                android:id="@id/radio_opt_unavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak"/>
            <RadioButton
                android:id="@id/radio_opt_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikuti Jadwal Dibawah" />
        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/place_autocomplete_separator"/>

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/lvDays"/>

</LinearLayout>