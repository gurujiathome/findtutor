<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/window_to_content_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsHeader"
            android:text="Profil &amp; Preferensi Saya"/>
        <LinearLayout
            android:id="@+id/basicProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsItemLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settingsItemTitle"
                android:text="Profil Dasar"/>
        </LinearLayout>
        <View style="@style/horizontalLineSeparator"/>
        <LinearLayout
            android:id="@+id/tutorPref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsItemLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settingsItemTitle"
                android:text="Preferensi Pengajar"/>
        </LinearLayout>
        <View style="@style/horizontalLineSeparator"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsHeader"
            android:text="Akun"/>
        <LinearLayout
            android:id="@+id/changeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsItemLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settingsItemTitle"
                android:text="Ganti Email"/>
        </LinearLayout>
        <View style="@style/horizontalLineSeparator"/>
        <LinearLayout
            android:id="@+id/changePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsItemLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settingsItemTitle"
                android:text="Ganti Password"/>
        </LinearLayout>
        <View style="@style/horizontalLineSeparator"/>
        <LinearLayout
            android:id="@+id/accountLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/settingsItemLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settingsItemTitle"
                android:text="Logout"/>
        </LinearLayout>
        <View style="@style/horizontalLineSeparator"/>
    </LinearLayout>

    <!--<ListView
        android:id="@+id/settings_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>-->

</LinearLayout>
