<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/window_to_content_padding">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lvAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_time_slot"
            android:layout_marginBottom="@dimen/input_layout_margin_bottom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_start_time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="00:00"
                android:textSize="26sp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/btn_default_color"
                android:clickable="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="38dp"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sampai_dengan"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_end_time"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="00:00"
                android:textSize="26sp"
                android:gravity="center_horizontal|center_vertical"
                android:background="@color/btn_default_color"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/btn_save_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="38dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:src="@drawable/ic_done"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>